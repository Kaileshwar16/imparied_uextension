
{
  "manifest_version": 2,
  "name": "YouTube Caption Extractor",
  "version": "1.0",
  "description": "Extracts and displays captions from YouTube videos.",
  "permissions": ["activeTab", "storage"],
  "background": {
   
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
